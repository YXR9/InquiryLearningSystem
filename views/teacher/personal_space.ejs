<!DOCTYPE html>
<html>
    <head>
        <title>科學探究學習系統</title>
        <%- include ../cdn.html %>        
    </head>
    <body>
        <%- include ./group_navbar.html %>  
        <div class="container-fluid" id="mainfuncNavBlank"></div>      
        <div class="continaer-fluid" id="groupPersoanlSpace">
            <div class="row">
                <div class="col-4">
                    <div class="card" id="personalIdeaList">
                        <div class="card-header"><i class="fas fa-heart text-light pr-1"></i>收藏的想法</div>
                        <div class="card-body"></div>
                    </div>
                </div>
                <div class="col">  
                    <div class="row">
                        <div class="card" id="personalNote">
                            <div class="card-header"><i class="fas fa-clipboard text-light pr-1"></i>個人筆記</div>
                            <div class="card-body">
                                <textarea name="noteText" id="noteText"></textarea>                                
                                <button type="button" class="btn btn-outline-info float-right mt-2" id="savePersonalNote_btn">儲存筆記</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>           
        </div>
        <!-- 取消想法收藏 -->
        <div class="modal" id="checkRemoveFavorite" tabindex="-1" role="dialog" aria-labelledby="checkRemoveFavoriteLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-body">
                  是否取消收藏？
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">否</button>
                  <button type="button" class="btn btn-danger" data-dismiss="modal" id="checkRemoveFavorite_btn">是</button>
                </div>
              </div>
            </div>
        </div>
        <div id="activityId" style="display: none;"><%= activityId %></div>
        <div id="groupId" style="display: none;"><%= groupId %></div>
        <div id="memberId" style="display: none;"><%= memberId %></div>
        <div id="memberName" style="display: none;"><%= memberName %></div>
        <div id="favoriteIdea" style="display: none;"><%= favoriteIdea %></div>
        <div id="personalNoteContent" style="display: none;"><%= personalNoteContent %></div>
        <script src="/socket.io/socket.io.js"></script>
        <script type="text/javascript" src="/javascripts/join_socket_room.js"></script>      
        <script src="/javascripts/group_personal_space.js"></script>
    </body>
</html>